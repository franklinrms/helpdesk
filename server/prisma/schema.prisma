// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
    provider = "prisma-client-js"
}

datasource db {
    provider = "mongodb"
    url      = env("DATABASE_URL")
}

model User {
    id       String @id @default(cuid()) @map("_id")
    email    String @unique
    name     String
    password String
    role     Role   @default(USER)

    @@map("users")
}

enum Role {
    ADMIN
    HELPER
    USER
}
